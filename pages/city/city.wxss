.city-container{
  /* 禁止页面的滚动 */
  /* height: 100vh;
  overflow: hidden; */
}

.searchBox{
  display: flex;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
}
.searchBox input{
  height: 50rpx;
  flex: 1;
  background: rgb(223, 219, 217);
}
.clear{
  width: 80rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  padding: 0;
}

.searchResult{
  position: absolute;
  top: 90rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
}
.city-title{
  padding-left: 20rpx;
  background: rgb(223, 219, 217);
}
.city-item{
  display: inline-block;
  margin: 10rpx 20rpx;
  width: 210rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  background: rgb(223, 219, 217);
  color: rgb(red, green, blue);
}