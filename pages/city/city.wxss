.searchBox{
  display: flex;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
}
.searchBox input{
  flex: 1;
  background: rgb(223, 219, 217);
}
.clear{
  width: 80rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 30rpx;
  padding: 0;
}
.city-title{
  padding-left: 20rpx;
  background: rgb(223, 219, 217);
}
.city-item{
  display: inline-block;
  margin: 10rpx 20rpx;
  width: 210rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
  background: rgb(223, 219, 217);
  color: rgb(red, green, blue);
}