.fr {
  float: right;
}

.scroll-container {
  background: rgba(0, 0, 0, 0.6);
}
.scroll-title{

  text-align: center;
  border-bottom: 1rpx solid rgba(255, 255, 255,0.6);
}
.scroll {
  width: 100vw;
  height: 200rpx;
  white-space: nowrap;
  /* border: 1px solid red; */
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.scroll-item {
  width: 45%;
  height: 100%;
  padding: 0 20rpx;
  /* border:2rpx solid green; */
  box-sizing: border-box;
  display: inline-block;
  border-right: 1rpx solid rgba(255, 255, 255,0.6);
}

.item-top {
  height: 100rpx;
  line-height: 100rpx;
}

.item-under{
  display: flex;
}
.item-under-weather{
  width: 100rpx;
  flex: 1;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.item-under image {
  width: 110rpx;
  height: 50rpx;
}
